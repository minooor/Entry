<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th>試合日時</th>
      <th>競技名</th>
      <th>コメント</th>
      <th>募集状況</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.customer.id %></td>
      <td>
        <%= post.customer.name %>
      </td>
      <td>
        <%= post.game_on %>
      </td>
      <td>
        <%= post.category %>
      </td>
      <td><%= post.content.truncate(10) %></td>
      <td>
        <% if post.is_active == true %>
         <%= link_to "募集中", admin_post_path(post) %>
        <% else %>
         終了
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
