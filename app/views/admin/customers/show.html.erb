<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @customer %>
      <h2 class="text-center mt-3"><%= @customer.name %>さんの会員情報</h2>
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control email" %>
      </div>
      <div class="d-flex justify-content-center">
       <div class="col-10 btn-group mt-3" data-toggle="buttons">
        <label class="btn btn-outline-secondary active" style="width:50%">
          <%= f.radio_button :is_deleted, {checked: false} %> 有効
        </label>
        <label class="btn btn-outline-secondary" style="width:50%">
          <%= f.radio_button :is_deleted, {} %> 退会
        </label>
       </div>
      </div>
      <div class="form-group">
        <div class="d-flex justify-content-between mt-3">
          <%= link_to "戻る", admin_customers_path, class: "btn btn-secondary" %>
          <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>