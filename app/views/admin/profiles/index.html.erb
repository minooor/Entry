<h3 class="text-center my-3">プロフィール一覧</h3>
<div class="container">
  <div class="d-flex justify-content-end mb-1">
    <%= render "search", q: @q %>
  </div>
  <div class="row justify-content-center">
    <div class="table-responsive">
      <table class="table table-hover text-nowrap">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>写真</th>
            <th>競技名</th>
            <th>活動拠点</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @profiles.each do |profile| %>
          <tr>
            <td>
              <%= profile.customer.id %>
            </td>
            <td>
              <%= profile.customer.name %>
            </td>
            <td>
              <%= image_tag profile.get_profile_image(45,45) %>
            </td>
            <td>
              <%= profile.category %>
            </td>
            <td>
             <%= profile.address %>
            </td>
            <td>
              <%= link_to "詳細", admin_profile_path(profile) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @profiles %>
    </div>
  </div>
</div>
