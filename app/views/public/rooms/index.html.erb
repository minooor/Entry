<h3 class="text-center mt-3 mb-3">DM一覧</h3>
<div class="container">
  <div class="row justify-content-center">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>チーム名</th>
          <th>メッセージ</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @another_customer_rooms.each do |a| %>
        <tr>
          <td><%= a.customer.name %></td>
          <td><%= Chat.find_by(id: a.room.chat_ids.last).message %></td>
          <td><%= link_to "DMする", chat_path(a.customer.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>