<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table table-borderless">
        <h3 class="mt-3 mb-3">募集詳細</h3>
        <tbody>
          <tr>
            <td>チーム名</td>
            <td><%= @post.customer.name %></td>
          </tr>
          <tr>
            <td>競技名</td>
            <td><%= @post.category %></td>
          </tr>
          <tr>
            <td>試合日時</td>
            <td><%= @post.game_on %></td>
          </tr>
          <tr>
            <td>グラウンド</td>
            <td><%= @post.ground %></td>
          </tr>
          <tr>
            <td>コメント</td>
            <td><%= @post.content %></td>
          </tr>
          <tr>
            <td>募集状況</td>
            <td>
              <% if @post.is_active == true %>
              募集中
              <% else %>
              終了
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <% if @post.customer == current_customer %>
              <%= link_to "編集する", edit_post_path(@post.id), class: "btn btn-success" %>
              <% end %>
            </td>
            <td>
              <% if current_customer != @post.customer %>
              <%= link_to 'Begin Chat', chat_path(@post.customer) %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row justify-content-center">
       <%= link_to "戻る", posts_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
