<%= form_with model: post, local: true do |f| %>
<div class="form-group">
  <%= f.label "競技名" %>
  <%= f.text_field :category, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label "試合日時" %>
  <%= f.date_field :game_on, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label "グラウンド" %>
  <%= f.text_field :ground, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label "コメント" %>
  <%= f.text_field :content, class: 'form-control' %>
</div>
<div class="form-group row">
  <div class="col-sm-2">
    <%= f.label :is_active, '募集', {class: 'form-label'} %>
  </div>
  <div class="col-sm-10 btn-group" data-toggle="buttons">
    <label class="btn btn-outline-secondary active" style="width:50%">
      <%= f.radio_button :is_active, {checked: true} %> 募集中
    </label>
    <label class="btn btn-outline-secondary" style="width:50%">
      <%= f.radio_button :is_active, {} %> 終了
    </label>
  </div>
</div>
<div class="form-group text-center">
 <%= f.submit class: 'btn btn-success' %>
 <% end %>
</div>