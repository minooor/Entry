<div class='container'>
 <div class='row'>
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <%= render 'layouts/errors', obj: @event %>
   <h2 class="text-center mt-3">予定編集</h2>
   <%= form_with model: @event, local: true do |f| %>
   <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: "form-control title" %>
   </div>
   <div class="form-group">
    <%= f.label :内容 %>
    <%= f.text_field :content, class: "form-control content" %>
   </div>
   <div class="form-group">
     <%= f.label :時間 %>
     <div class="form-group">
     始まり<%= f.datetime_select :start_time %>
     </div>
     <div class="form-group">
     終わり<%= f.datetime_select :end_time %>
     </div>
   </div>
   <div class="form-group">
    <div class="d-flex justify-content-center">
    <%= f.submit "変更を保存", class: 'btn btn-secondary' %>
    </div>
   </div>
   <div class="row justify-content-center">
     <%= link_to "戻る", customer_path(current_customer), class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>