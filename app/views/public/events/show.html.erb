<h3 class="text-center my-3">予定詳細</h3>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
    <table class="table table-hover">
      <tbody class="align-middle text-center">
        <tr>
          <th>タイトル</th>
          <td><%= @event.title %></td>
        </tr>
        <tr>
          <th>内容</th>
          <td><%= @event.content %></td>
        </tr>
        <tr>
          <th>日時</th>
          <td>
            <%= @event.start_time.strftime("%m-%d") %>
            <%= @event.end_time.strftime("%m-%d") %>
          </td>
        </tr>
        <tr>
          <th><%= link_to '編集', edit_event_path(@event) %></th>
          <td>
            <%= link_to '削除', event_path(@event.id), method: :delete, data: { confirm: '本当に削除しますか?' } %>
          </td>
        </tr>
      </tbody>
    </table>
    <div class="row justify-content-center">
      <%= link_to '戻る', customer_path(current_customer), class: "btn btn-secondary" %>
    </div>
    </div>
  </div>
</div>