<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <h3>マイページ</h3>
      <div class="mypage ml-2">
        <div><%= link_to "チームプロフィール", new_profile_path(@customer), class: "list" %></div>
        <div><%= link_to "会員情報変更", edit_customer_path(@customer), class: "list" %></div>
        <div><%= link_to "お気に入りチーム", favorites_customer_path(@customer), class: "list" %></div>
        <div><%= link_to "DM一覧", rooms_path(@customer), class: "list" %></div>
        <div><%= link_to "募集投稿/履歴", new_post_path, class: "list" %></div>
        <div>
          <%= link_to (notifications_path), class: "list" do %>
           <% if unchecked_notifications.any?%>
            <p>通知<i class="fas fa-bell"></i></p>
           <% else %>
            <p>通知</p>
           <% end %>
          <% end %>
        </div>
      </div>
      <%= render 'public/events/form', event: @event %>
    </div>
    <div class="col-md-8">
      <%= render 'public/events/index', event: @events %>
    </div>
    </div>
  </div>
</div>